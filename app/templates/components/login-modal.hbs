<form {{action 'login' 'email'}}>
  {{input
    type="text"
    value=email
    placeholder="email"
  }}
  {{input
    type="password"
    value=password
  }}
  <input type="submit" value="Login">
</form>

<ul>
  {{#if error}}
    <li>{{error}}</li>
  {{/if}}
  {{#if emailError}}
    <li>{{emailError}}</li>
  {{/if}}
  {{#if passwordError}}
    <li>{{passwordError}}</li>
  {{/if}}
</ul>
