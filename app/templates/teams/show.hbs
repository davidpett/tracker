<p>
  {{link-to "Team list" "teams.index" }}
</p>

{{#if session.isAuthenticated}}
  <p>
    {{link-to "Edit" "teams.edit" this}}
  </p>
{{/if}}

<h1>
  {{#if logo}}
    <img {{bind-attr src="logo" alt="name"}} />
  {{/if}}
  {{name}}
</h1>

<h2>Players</h2>
<table>
  <tr>
    <th>Number</th>
    <th>Last Name</th>
    <th>First Name</th>
  </tr>
  {{#each players}}
    <tr>
      <td>{{number}}</td>
      <td>{{#link-to 'players.show' this}}{{lastName}}{{/link-to}}</td>
      <td>{{firstName}}</td>
    </tr>
  {{/each}}
</table>

<h2>Matches</h2>
<table>
  <tr>
    <th>Date</th>
    <th>Home</th>
    <th>Away</th>
  </tr>
  {{#each matches}}
    <tr>
      <td>
        {{#link-to 'matches.show' this}}{{formattedDate}}{{/link-to}}
      </td>
      <td>
        {{#link-to 'teams.show' home}}{{home.name}}{{/link-to}}
      </td>
      <td>
        {{#link-to 'teams.show' away}}{{away.name}}{{/link-to}}
      </td>
    </tr>
  {{/each}}
</table>
